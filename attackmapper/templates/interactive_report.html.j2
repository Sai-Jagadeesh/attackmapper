            <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
    </button>

    <script>
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateRiskCounts();
            updateMetrics();
        });

        function updateRiskCounts() {
            const counts = { critical: 0, high: 0, medium: 0, low: 0 };
            document.querySelectorAll('.technique-card').forEach(card => {
                const risk = card.dataset.risk;
                if (counts.hasOwnProperty(risk)) {
                    counts[risk]++;
                }
            });
            Object.keys(counts).forEach(risk => {
                const el = document.getElementById('count-' + risk);
                if (el) el.textContent = counts[risk];
            });
            return counts;
        }

        function updateMetrics() {
            const counts = updateRiskCounts();

            // Update critical/high count if element exists (no threat intel)
            const criticalEl = document.getElementById('metric-critical');
            if (criticalEl) {
                criticalEl.textContent = counts.critical + counts.high;
            }

            // Calculate unique tools
            const toolsSet = new Set();
            document.querySelectorAll('.tool-tag').forEach(tag => {
                toolsSet.add(tag.textContent.trim().toLowerCase());
            });
            const toolsEl = document.getElementById('metric-tools');
            if (toolsEl) {
                toolsEl.textContent = toolsSet.size;
            }
        }

        function filterTechniques() {
            const searchQuery = document.getElementById('searchInput').value.toLowerCase();
            const selectedPhases = Array.from(
                document.querySelectorAll('#phaseFilters input:checked')
            ).map(cb => cb.value);
            const selectedRisks = Array.from(
                document.querySelectorAll('#riskFilters input:checked')
            ).map(cb => cb.value);

            let visibleCount = 0;
            let visiblePhases = new Set();

            document.querySelectorAll('.technique-card').forEach(card => {
                const phase = card.dataset.phase;
                const risk = card.dataset.risk;
                const name = card.dataset.name;
                const id = card.dataset.id;
                const desc = card.dataset.desc;
                const tools = card.dataset.tools;

                const matchesPhase = selectedPhases.includes(phase);
                const matchesRisk = selectedRisks.includes(risk);
                const matchesSearch = !searchQuery ||
                    name.includes(searchQuery) ||
                    id.includes(searchQuery) ||
                    desc.includes(searchQuery) ||
                    tools.includes(searchQuery);

                if (matchesPhase && matchesRisk && matchesSearch) {
                    card.classList.remove('hidden');
                    visibleCount++;
                    visiblePhases.add(phase);
                } else {
                    card.classList.add('hidden');
                }
            });

            document.querySelectorAll('.phase-section').forEach(section => {
                const phase = section.dataset.phase;
                section.classList.toggle('hidden', !visiblePhases.has(phase));
            });

            document.getElementById('visibleCount').textContent = visibleCount;
            document.getElementById('noResults').classList.toggle('hidden', visibleCount > 0);
        }

        function togglePhase(header) {
            header.classList.toggle('collapsed');
        }

        function toggleTechnique(card) {
            card.classList.toggle('expanded');
        }

        function toggleSection(header) {
            header.classList.toggle('collapsed');
        }

        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
            document.querySelector('.overlay').classList.toggle('open');
        }

        function expandAll() {
            document.querySelectorAll('.phase-header').forEach(h => h.classList.remove('collapsed'));
            document.querySelectorAll('.technique-card').forEach(c => c.classList.add('expanded'));
            document.querySelectorAll('.section-header').forEach(h => h.classList.remove('collapsed'));
        }

        function collapseAll() {
            document.querySelectorAll('.phase-header').forEach(h => h.classList.add('collapsed'));
            document.querySelectorAll('.technique-card').forEach(c => c.classList.remove('expanded'));
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
                e.preventDefault();
                document.getElementById('searchInput').focus();
            }
            if (e.key === 'Escape') {
                document.getElementById('searchInput').value = '';
                filterTechniques();
            }
        });

        // ========================================
        // Attack Graph Visualization
        // ========================================
        const phaseColors = {
            reconnaissance: '#5eadb8',
            initial_access: '#5a9a6a',
            execution: '#c9a55a',
            persistence: '#9a8ac8',
            privilege_escalation: '#c87a7a',
            defense_evasion: '#6a9aca',
            credential_access: '#c8708a',
            discovery: '#5a9aaa',
            lateral_movement: '#aaa05a',
            collection: '#9a6aaa',
            exfiltration: '#5a8aca',
            impact: '#aa5a5a'
        };

        const phaseOrder = [
            'reconnaissance', 'initial_access', 'execution', 'persistence',
            'privilege_escalation', 'defense_evasion', 'credential_access',
            'discovery', 'lateral_movement', 'collection', 'exfiltration', 'impact'
        ];

        const phaseDisplayNames = {
            reconnaissance: 'Recon',
            initial_access: 'Initial Access',
            execution: 'Execution',
            persistence: 'Persistence',
            privilege_escalation: 'Priv Esc',
            defense_evasion: 'Defense Evasion',
            credential_access: 'Cred Access',
            discovery: 'Discovery',
            lateral_movement: 'Lateral Mvmt',
            collection: 'Collection',
            exfiltration: 'Exfiltration',
            impact: 'Impact'
        };

        const graphData = { nodes: [], links: [] };

        document.querySelectorAll('.technique-card').forEach((card, index) => {
            const phase = card.dataset.phase;
            const name = card.querySelector('.technique-name')?.textContent || '';
            const mitreId = card.querySelector('.technique-id')?.textContent || '';
            const desc = card.querySelector('.technique-desc')?.textContent || '';
            const tools = Array.from(card.querySelectorAll('.tool-tag')).map(t => t.textContent);
            const risk = card.dataset.risk;

            graphData.nodes.push({
                id: mitreId || `tech-${index}`,
                name: name,
                phase: phase,
                description: desc.substring(0, 120) + (desc.length > 120 ? '...' : ''),
                tools: tools,
                risk: risk,
                index: index
            });
        });

        const nodesByPhase = {};
        graphData.nodes.forEach(node => {
            if (!nodesByPhase[node.phase]) nodesByPhase[node.phase] = [];
            nodesByPhase[node.phase].push(node);
        });

        for (let i = 0; i < phaseOrder.length - 1; i++) {
            const currentPhase = phaseOrder[i];
            const nextPhase = phaseOrder[i + 1];
            if (nodesByPhase[currentPhase] && nodesByPhase[nextPhase]) {
                const sourceNodes = nodesByPhase[currentPhase];
                const targetNodes = nodesByPhase[nextPhase];
                sourceNodes.forEach(source => {
                    targetNodes.forEach(target => {
                        if (Math.random() < 0.25 || (sourceNodes.length <= 2 && targetNodes.length <= 2)) {
                            graphData.links.push({ source: source.id, target: target.id, value: 1 });
                        }
                    });
                });
            }
        }

        let currentView = 'flow';
        let svg, g, zoom, simulation;
        const container = document.getElementById('attackGraph');
        const tooltip = document.getElementById('graphTooltip');

        function initGraph() {
            const width = container.clientWidth;
            const height = container.clientHeight;
            d3.select('#attackGraph svg').remove();
            svg = d3.select('#attackGraph').append('svg').attr('width', width).attr('height', height);
            zoom = d3.zoom().scaleExtent([0.1, 4]).on('zoom', (event) => g.attr('transform', event.transform));
            svg.call(zoom);
            g = svg.append('g');
            svg.append('defs').append('marker')
                .attr('id', 'arrowhead').attr('viewBox', '-0 -5 10 10')
                .attr('refX', 20).attr('refY', 0).attr('orient', 'auto')
                .attr('markerWidth', 6).attr('markerHeight', 6)
                .append('path').attr('d', 'M 0,-5 L 10,0 L 0,5').attr('fill', 'rgba(100, 116, 139, 0.4)');
            renderGraph();
            renderLegend();
        }

        function renderGraph() {
            g.selectAll('*').remove();
            if (currentView === 'flow') renderFlowGraph();
            else if (currentView === 'force') renderForceGraph();
            else if (currentView === 'radial') renderRadialGraph();
        }

        function renderFlowGraph() {
            const width = container.clientWidth;
            const height = container.clientHeight;
            const padding = 60;
            const activePhases = phaseOrder.filter(p => nodesByPhase[p] && nodesByPhase[p].length > 0);
            if (activePhases.length === 0) return;

            const laneWidth = (width - padding * 2) / activePhases.length;
            const laneHeight = height - padding * 2;

            activePhases.forEach((phase, i) => {
                const laneG = g.append('g').attr('class', 'phase-lane-group');
                laneG.append('rect')
                    .attr('x', padding + i * laneWidth).attr('y', padding)
                    .attr('width', laneWidth - 5).attr('height', laneHeight)
                    .attr('rx', 8).style('fill', phaseColors[phase]).style('opacity', 0.08);
                laneG.append('text')
                    .attr('class', 'phase-lane-label')
                    .attr('x', padding + i * laneWidth + laneWidth / 2)
                    .attr('y', padding - 12).attr('text-anchor', 'middle')
                    .text(phaseDisplayNames[phase] || phase);
            });

            activePhases.forEach((phase, phaseIndex) => {
                const nodes = nodesByPhase[phase] || [];
                const x = padding + phaseIndex * laneWidth + laneWidth / 2;
                nodes.forEach((node, nodeIndex) => {
                    const y = padding + 40 + (nodeIndex * (laneHeight - 60) / Math.max(nodes.length - 1, 1));
                    node.x = x;
                    node.y = nodes.length === 1 ? height / 2 : y;
                });
            });

            g.append('g').selectAll('path')
                .data(graphData.links.filter(l => {
                    const source = graphData.nodes.find(n => n.id === l.source || n.id === l.source.id);
                    const target = graphData.nodes.find(n => n.id === l.target || n.id === l.target.id);
                    return source && target;
                }))
                .enter().append('path').attr('class', 'graph-link')
                .attr('d', d => {
                    const source = graphData.nodes.find(n => n.id === d.source || n.id === d.source.id);
                    const target = graphData.nodes.find(n => n.id === d.target || n.id === d.target.id);
                    if (!source || !target) return '';
                    return `M${source.x},${source.y}Q${(source.x + target.x) / 2},${(source.y + target.y) / 2 - 15},${target.x},${target.y}`;
                })
                .attr('marker-end', 'url(#arrowhead)');

            const node = g.append('g').selectAll('.graph-node')
                .data(graphData.nodes).enter().append('g')
                .attr('class', 'graph-node')
                .attr('transform', d => `translate(${d.x},${d.y})`)
                .on('mouseover', showTooltip).on('mouseout', hideTooltip)
                .on('click', (event, d) => scrollToTechnique(d.index));

            node.append('circle')
                .attr('r', d => d.risk === 'critical' ? 12 : d.risk === 'high' ? 10 : 8)
                .attr('fill', d => phaseColors[d.phase] || '#666')
                .attr('stroke', d => d.risk === 'critical' ? '#f87171' : d.risk === 'high' ? '#fbbf24' : '#475569')
                .attr('stroke-width', 2);

            node.append('text').attr('dy', 22).attr('text-anchor', 'middle')
                .text(d => d.id.length > 10 ? d.id.substring(0, 10) + '..' : d.id)
                .style('font-size', '9px');
        }

        function renderForceGraph() {
            const width = container.clientWidth;
            const height = container.clientHeight;
            simulation = d3.forceSimulation(graphData.nodes)
                .force('link', d3.forceLink(graphData.links).id(d => d.id).distance(80))
                .force('charge', d3.forceManyBody().strength(-150))
                .force('center', d3.forceCenter(width / 2, height / 2))
                .force('collision', d3.forceCollide().radius(25));

            const link = g.append('g').selectAll('line')
                .data(graphData.links).enter().append('line')
                .attr('class', 'graph-link').attr('marker-end', 'url(#arrowhead)');

            const node = g.append('g').selectAll('.graph-node')
                .data(graphData.nodes).enter().append('g')
                .attr('class', 'graph-node')
                .on('mouseover', showTooltip).on('mouseout', hideTooltip)
                .on('click', (event, d) => scrollToTechnique(d.index))
                .call(d3.drag().on('start', dragstarted).on('drag', dragged).on('end', dragended));

            node.append('circle')
                .attr('r', d => d.risk === 'critical' ? 12 : d.risk === 'high' ? 10 : 8)
                .attr('fill', d => phaseColors[d.phase] || '#666')
                .attr('stroke', d => d.risk === 'critical' ? '#f87171' : '#475569')
                .attr('stroke-width', 2);

            node.append('text').attr('dy', 22).attr('text-anchor', 'middle')
                .text(d => d.id.length > 10 ? d.id.substring(0, 10) + '..' : d.id)
                .style('font-size', '9px');

            simulation.on('tick', () => {
                link.attr('x1', d => d.source.x).attr('y1', d => d.source.y)
                    .attr('x2', d => d.target.x).attr('y2', d => d.target.y);
                node.attr('transform', d => `translate(${d.x},${d.y})`);
            });

            function dragstarted(event, d) {
                if (!event.active) simulation.alphaTarget(0.3).restart();
                d.fx = d.x; d.fy = d.y;
            }
            function dragged(event, d) { d.fx = event.x; d.fy = event.y; }
            function dragended(event, d) {
                if (!event.active) simulation.alphaTarget(0);
                d.fx = null; d.fy = null;
            }
        }

        function renderRadialGraph() {
            const width = container.clientWidth;
            const height = container.clientHeight;
            const centerX = width / 2;
            const centerY = height / 2;
            const radius = Math.min(width, height) / 2 - 80;
            const activePhases = phaseOrder.filter(p => nodesByPhase[p] && nodesByPhase[p].length > 0);
            const angleStep = (2 * Math.PI) / activePhases.length;

            activePhases.forEach((phase, phaseIndex) => {
                const nodes = nodesByPhase[phase] || [];
                const baseAngle = phaseIndex * angleStep - Math.PI / 2;
                const phaseRadius = radius * 0.7;
                nodes.forEach((node, nodeIndex) => {
                    const angleOffset = (nodeIndex - (nodes.length - 1) / 2) * 0.12;
                    const angle = baseAngle + angleOffset;
                    const r = phaseRadius + (nodeIndex % 2) * 35;
                    node.x = centerX + r * Math.cos(angle);
                    node.y = centerY + r * Math.sin(angle);
                });
            });

            activePhases.forEach((phase, i) => {
                const startAngle = i * angleStep - Math.PI / 2 - angleStep / 2;
                const endAngle = startAngle + angleStep;
                const arc = d3.arc().innerRadius(radius * 0.35).outerRadius(radius * 0.95)
                    .startAngle(startAngle).endAngle(endAngle);
                g.append('path').attr('d', arc)
                    .attr('transform', `translate(${centerX},${centerY})`)
                    .style('fill', phaseColors[phase]).style('opacity', 0.08);
                const labelAngle = (startAngle + endAngle) / 2;
                const labelRadius = radius * 1.08;
                g.append('text')
                    .attr('x', centerX + labelRadius * Math.cos(labelAngle))
                    .attr('y', centerY + labelRadius * Math.sin(labelAngle))
                    .attr('text-anchor', 'middle').attr('dominant-baseline', 'middle')
                    .style('fill', '#64748b').style('font-size', '10px')
                    .text(phaseDisplayNames[phase] || phase);
            });

            g.append('g').selectAll('path')
                .data(graphData.links).enter().append('path')
                .attr('class', 'graph-link')
                .attr('d', d => {
                    const source = graphData.nodes.find(n => n.id === d.source || n.id === d.source.id);
                    const target = graphData.nodes.find(n => n.id === d.target || n.id === d.target.id);
                    if (!source || !target) return '';
                    return `M${source.x},${source.y}Q${centerX},${centerY},${target.x},${target.y}`;
                })
                .attr('marker-end', 'url(#arrowhead)');

            const node = g.append('g').selectAll('.graph-node')
                .data(graphData.nodes).enter().append('g')
                .attr('class', 'graph-node')
                .attr('transform', d => `translate(${d.x},${d.y})`)
                .on('mouseover', showTooltip).on('mouseout', hideTooltip)
                .on('click', (event, d) => scrollToTechnique(d.index));

            node.append('circle')
                .attr('r', d => d.risk === 'critical' ? 10 : d.risk === 'high' ? 8 : 6)
                .attr('fill', d => phaseColors[d.phase] || '#666')
                .attr('stroke', d => d.risk === 'critical' ? '#f87171' : '#475569')
                .attr('stroke-width', 2);

            node.append('text').attr('dy', 18).attr('text-anchor', 'middle')
                .text(d => d.id.length > 8 ? d.id.substring(0, 8) + '..' : d.id)
                .style('font-size', '8px');
        }

        function showTooltip(event, d) {
            tooltip.innerHTML = `
                <h4>${d.name}</h4>
                <div class="mitre-id">${d.id}</div>
                <p>${d.description}</p>
                ${d.tools.length > 0 ? `<div class="tools">${d.tools.slice(0, 4).map(t => `<span class="tool-tag">${t}</span>`).join('')}</div>` : ''}
            `;
            tooltip.classList.add('visible');
            const rect = container.getBoundingClientRect();
            const x = event.clientX - rect.left + 15;
            const y = event.clientY - rect.top - 10;
            tooltip.style.left = Math.min(x, rect.width - 320) + 'px';
            tooltip.style.top = Math.min(y, rect.height - 150) + 'px';
        }

        function hideTooltip() { tooltip.classList.remove('visible'); }

        function scrollToTechnique(index) {
            const cards = document.querySelectorAll('.technique-card');
            if (cards[index]) {
                cards[index].scrollIntoView({ behavior: 'smooth', block: 'center' });
                cards[index].classList.add('expanded');
                cards[index].style.boxShadow = '0 0 0 2px var(--accent-primary)';
                setTimeout(() => { cards[index].style.boxShadow = ''; }, 2000);
            }
        }

        function renderLegend() {
            const legend = document.getElementById('graphLegend');
            const activePhases = phaseOrder.filter(p => nodesByPhase[p] && nodesByPhase[p].length > 0);
            legend.innerHTML = activePhases.map(phase => `
                <div class="legend-item">
                    <div class="legend-dot" style="background: ${phaseColors[phase]}"></div>
                    <span>${phaseDisplayNames[phase]} (${nodesByPhase[phase].length})</span>
                </div>
            `).join('');
        }

        function setGraphView(view) {
            currentView = view;
            document.querySelectorAll('.view-toggle button').forEach(btn => btn.classList.remove('active'));
            document.getElementById(view + 'ViewBtn').classList.add('active');
            if (simulation) simulation.stop();
            renderGraph();
        }

        function resetGraphZoom() {
            svg.transition().duration(500).call(zoom.transform, d3.zoomIdentity);
        }

        function exportGraphSVG() {
            const svgData = new XMLSerializer().serializeToString(svg.node());
            const blob = new Blob([svgData], { type: 'image/svg+xml' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'attack-graph.svg';
            a.click();
            URL.revokeObjectURL(url);
        }

        // Initialize graph
        document.addEventListener('DOMContentLoaded', function() {
            if (graphData.nodes.length > 0) {
                initGraph();
                let resizeTimeout;
                window.addEventListener('resize', () => {
                    clearTimeout(resizeTimeout);
                    resizeTimeout = setTimeout(initGraph, 250);
                });
            } else {
                document.querySelector('.section-card:has(#attackGraph)')?.style.setProperty('display', 'none');
            }
        });
    </script>
</body>
