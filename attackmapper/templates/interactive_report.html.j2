                        <div class="technique-card" data-phase="{{ phase }}" data-risk="{{ tech.risk_level }}" data-name="{{ tech.name | lower }}" data-id="{{ tech.mitre_id | lower }}" data-desc="{{ tech.description | lower }}" data-tools="{{ tech.tools | join(' ') | lower }}">
                            <div class="technique-card-header" onclick="toggleTechnique(this.parentElement)">
                                <div class="technique-main">
                                    <div class="technique-title">
