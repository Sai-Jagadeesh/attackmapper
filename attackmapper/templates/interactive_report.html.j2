        </div>

        <div class="sidebar-content">
            <div class="filter-section">
                <div class="filter-title">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 3H2l8 9.46V19l4 2v-8.54L22 3z"></path>
                    </svg>
                    Attack Phases
                </div>
                <div class="filter-group" id="phaseFilters">
                    {% for phase in phase_order %}
                    {% if phase in techniques_by_phase %}
                    <div class="filter-checkbox">
                        <input type="checkbox" id="phase-{{ phase }}" value="{{ phase }}" checked onchange="filterTechniques()">
                        <label for="phase-{{ phase }}">{{ phase_display_names[phase] }}</label>
                        <span class="count">{{ techniques_by_phase[phase] | length }}</span>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>

            <div class="filter-section">
                <div class="filter-title">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    Risk Level
                </div>
                <div class="filter-group" id="riskFilters">
                    <div class="filter-checkbox">
                        <input type="checkbox" id="risk-critical" value="critical" checked onchange="filterTechniques()">
                        <label for="risk-critical">Critical</label>
                        <span class="count" id="count-critical">0</span>
                    </div>
                    <div class="filter-checkbox">
                        <input type="checkbox" id="risk-high" value="high" checked onchange="filterTechniques()">
                        <label for="risk-high">High</label>
                        <span class="count" id="count-high">0</span>
                    </div>
                    <div class="filter-checkbox">
                        <input type="checkbox" id="risk-medium" value="medium" checked onchange="filterTechniques()">
                        <label for="risk-medium">Medium</label>
                        <span class="count" id="count-medium">0</span>
                    </div>
                    <div class="filter-checkbox">
                        <input type="checkbox" id="risk-low" value="low" checked onchange="filterTechniques()">
                        <label for="risk-low">Low</label>
                        <span class="count" id="count-low">0</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="sidebar-footer">
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-value">{{ total_techniques }}</div>
                    <div class="stat-label">Total</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" id="visibleCount">{{ total_techniques }}</div>
                    <div class="stat-label">Visible</div>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <header class="top-header">
            <div class="breadcrumb">
                <span>Reports</span>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">{{ title }}</span>
            </div>
            <div class="header-actions">
                <button class="btn" onclick="expandAll()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m7 15 5 5 5-5"></path>
                        <path d="m7 9 5-5 5 5"></path>
                    </svg>
                    Expand All
                </button>
                <button class="btn" onclick="collapseAll()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m17 9-5 5-5-5"></path>
                    </svg>
                    Collapse
                </button>
                <button class="btn btn-primary" onclick="window.print()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7,10 12,15 17,10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Export
                </button>
            </div>
        </header>

        <div class="page-content">
            <!-- Dashboard Metrics -->
            <div class="metrics-grid">
                {% if threat_intel and threat_intel.critical_cves %}
                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon critical">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#f87171" stroke-width="2">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                <line x1="12" y1="8" x2="12" y2="12"></line>
                                <line x1="12" y1="16" x2="12.01" y2="16"></line>
                            </svg>
                        </div>
                        <span class="metric-trend up">Live</span>
                    </div>
                    <div class="metric-value">{{ threat_intel.critical_cves | length }}</div>
                    <div class="metric-label">Critical CVEs</div>
                    <div class="metric-sublabel">Actively exploited vulnerabilities</div>
                </div>
                {% else %}
                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon critical">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#f87171" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="8" x2="12" y2="12"></line>
                                <line x1="12" y1="16" x2="12.01" y2="16"></line>
                            </svg>
                        </div>
                    </div>
                    <div class="metric-value" id="metric-critical">0</div>
                    <div class="metric-label">Critical/High Risk</div>
                    <div class="metric-sublabel">Techniques requiring immediate attention</div>
                </div>
                {% endif %}

                {% if threat_intel and threat_intel.active_threat_actors %}
                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon high">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#fbbf24" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <span class="metric-trend up">Active</span>
                    </div>
                    <div class="metric-value">{{ threat_intel.active_threat_actors | length }}</div>
                    <div class="metric-label">Threat Actors</div>
                    <div class="metric-sublabel">Known adversary groups targeting this infra</div>
                </div>
                {% else %}
                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon high">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#fbbf24" stroke-width="2">
                                <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26 12,2"></polygon>
                            </svg>
                        </div>
                    </div>
                    <div class="metric-value">{{ techniques_by_phase | length }}</div>
                    <div class="metric-label">Attack Phases</div>
                    <div class="metric-sublabel">MITRE ATT&CK kill chain coverage</div>
                </div>
                {% endif %}

                {% if threat_intel and threat_intel.trending_techniques %}
                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon medium">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#60a5fa" stroke-width="2">
                                <polyline points="22,7 13.5,15.5 8.5,10.5 2,17"></polyline>
                                <polyline points="16,7 22,7 22,13"></polyline>
                            </svg>
                        </div>
                        <span class="metric-trend up">Trending</span>
                    </div>
                    <div class="metric-value">{{ threat_intel.trending_techniques | length }}</div>
                    <div class="metric-label">Trending TTPs</div>
                    <div class="metric-sublabel">Techniques seeing increased usage</div>
                </div>
                {% else %}
                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon medium">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#60a5fa" stroke-width="2">
                                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="metric-value" id="metric-tools">0</div>
                    <div class="metric-label">Unique Tools</div>
                    <div class="metric-sublabel">Attack tools and frameworks mapped</div>
                </div>
                {% endif %}

                <div class="metric-card">
                    <div class="metric-header">
                        <div class="metric-icon total">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#6366f1" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7"></rect>
                                <rect x="14" y="3" width="7" height="7"></rect>
                                <rect x="14" y="14" width="7" height="7"></rect>
                                <rect x="3" y="14" width="7" height="7"></rect>
                            </svg>
                        </div>
                    </div>
                    <div class="metric-value">{{ total_techniques }}</div>
                    <div class="metric-label">MITRE Techniques</div>
                    <div class="metric-sublabel">Mapped to {{ infrastructure | upper }} infrastructure</div>
                </div>
            </div>

            {% if threat_intel %}
            <!-- Threat Intelligence Section -->
            <div class="section-card">
                <div class="section-header" onclick="toggleSection(this)">
                    <div class="section-title">
                        <div class="section-title-icon threat">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f87171" stroke-width="2">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                            </svg>
                        </div>
                        Active Threat Intelligence
                    </div>
                    <div class="section-meta">
                        {% if threat_intel.last_updated %}
                        <span class="section-badge">Updated: {{ threat_intel.last_updated }}</span>
                        {% endif %}
                        <span class="section-toggle">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6,9 12,15 18,9"></polyline>
                            </svg>
                        </span>
                    </div>
                </div>
                <div class="section-content">
                    <div class="threat-grid">
                        {% if threat_intel.critical_cves %}
                        <div class="threat-card">
                            <div class="threat-card-header">
                                <div class="threat-card-icon">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#f87171" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                </div>
                                <span class="threat-card-title">Critical CVEs</span>
                            </div>
                            <ul class="threat-list">
                                {% for cve in threat_intel.critical_cves[:6] %}
                                <li class="threat-list-item">
                                    <strong>{{ cve.cve_id }}</strong>
                                    {% if cve.cvss_score >= 9.0 %}
                                    <span class="badge badge-critical">{{ cve.cvss_score }}</span>
                                    {% elif cve.cvss_score >= 7.0 %}
                                    <span class="badge badge-high">{{ cve.cvss_score }}</span>
                                    {% else %}
                                    <span class="badge badge-medium">{{ cve.cvss_score }}</span>
                                    {% endif %}
                                    <small>{{ cve.description[:80] }}{% if cve.description|length > 80 %}...{% endif %}</small>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}

                        {% if threat_intel.active_threat_actors %}
                        <div class="threat-card">
                            <div class="threat-card-header">
                                <div class="threat-card-icon">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#f87171" stroke-width="2">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                </div>
                                <span class="threat-card-title">Active Threat Actors</span>
                            </div>
                            <ul class="threat-list">
                                {% for actor in threat_intel.active_threat_actors[:5] %}
                                <li class="threat-list-item">
                                    <strong>{{ actor.name }}</strong>
                                    {% if actor.aliases %}
                                    <small>AKA: {{ actor.aliases[:2] | join(", ") }}</small>
                                    {% endif %}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}

                        {% if threat_intel.trending_techniques %}
                        <div class="threat-card">
                            <div class="threat-card-header">
                                <div class="threat-card-icon">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#f87171" stroke-width="2">
                                        <polyline points="22,7 13.5,15.5 8.5,10.5 2,17"></polyline>
                                        <polyline points="16,7 22,7 22,13"></polyline>
                                    </svg>
                                </div>
                                <span class="threat-card-title">Trending Techniques</span>
                            </div>
                            <ul class="threat-list">
                                {% for tech in threat_intel.trending_techniques[:6] %}
                                <li class="threat-list-item">{{ tech }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Attack Graph Visualization -->
            <div class="section-card">
                <div class="section-header" onclick="toggleSection(this)">
                    <div class="section-title">
